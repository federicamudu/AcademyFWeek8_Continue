@model ICollection<CorsoViewModel>
<h1>Ecco la lista dei corsi</h1>
<br />
@if (User.IsInRole("Administrator"))
{
    <a type=button class="btn btn-primary" asp-controller="Corsi" asp-action="Create">Inserisci nuovo corso!</a>
}

<table class="table table-hover table-bordered table-striped">
    <thead>
        <tr>
            <th>Codice</th>
            <th>Nome</th>
            <th>Descrizione</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CorsoCodice</td>
                <td>@item.Nome</td>
                @*<td>@item.Descrizione</td>*@
                <td>
                    <a class="btn btn-primary" asp-controller="Corsi" asp-action="Details" asp-route-id="@item.CorsoCodice">Visualizza dettagli</a>
                    @if (User.IsInRole("Administrator"))
                    {
                        <a class="btn btn-primary" asp-controller="Corsi" asp-action="Edit" asp-route-id="@item.CorsoCodice">Modifica</a>
                        <a class="btn btn-danger" asp-controller="Corsi" asp-action="Delete" asp-route-id="@item.CorsoCodice">Elimina</a>
                    }

                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th>Totale</th>
            <th>@Model.Count</th>
            <th></th>
        </tr>
    </tfoot>
</table>
