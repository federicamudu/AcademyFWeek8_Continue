@model CorsoViewModel
<h1>Eliminazione del corso @Model.Nome</h1>
<p>Sei sicuro di voler cancellare il corso?</p>
<br />
<form method="post">
<div class="form-group">
    <label asp-for="CorsoCodice">Codice del Corso</label>
    <input asp-for="CorsoCodice" class="form-control" readonly/>
    <span asp-validation-for="CorsoCodice" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Nome">Nome del Corso</label>
    <input asp-for="Nome" class="form-control" readonly />
    <span asp-validation-for="Nome" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Descrizione">Descrizione del Corso</label>
    <input asp-for="Descrizione" class="form-control" readonly/>
    <span asp-validation-for="Descrizione" class="text-danger"></span>
</div>
<br />
<input type="submit" value="Elimina Corso" class="btn btn-danger" />
<a class="btn btn-primary" asp-controller="Corsi" asp-action="Index">Indietro</a>
</form>