@model StudenteViewModel
<h1>Modifica email dello studente @Model.Nome @Model.Cognome</h1>
<form method="post">
<div class="form-group">
    <label asp-for="Nome">Nome dello studente</label>
    <input asp-for="Nome" class="form-control" readonly />
    <span asp-validation-for="Nome" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Cognome">Cognome dello studente</label>
    <input asp-for="Cognome" class="form-control" readonly />
    <span asp-validation-for="Cognome" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Email">E-mail</label>
    <input asp-for="Email" class="form-control" />
    <span asp-validation-for="Email" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="TitoloStudio">Titolo di studio</label>
    <input asp-for="TitoloStudio" class="form-control" readonly/>
    <span asp-validation-for="TitoloStudio" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="DataNascita">Data di nascita</label>
    <input asp-for="DataNascita" class="form-control" readonly/>
    <span asp-validation-for="DataNascita" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="CorsoCodice">Codice del corso</label>
    <input asp-for="CorsoCodice" class="form-control" readonly/>
    <span asp-validation-for="CorsoCodice" class="text-danger"></span>
</div>

<br />
<input type="submit" value="Salva Modifica" class="btn btn-primary" />
<input type="reset" value="Reset" class="btn btn-primary" />
<a class="btn btn-primary" asp-controller="Studenti" asp-action="Index">Indietro</a>
</form>

