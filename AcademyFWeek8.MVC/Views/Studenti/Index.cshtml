@model ICollection<StudenteViewModel>
<h1>Ecco la lista degli Studenti</h1>
<br />
<a type=button class="btn btn-primary" asp-controller="Studenti" asp-action="Create">Inserisci nuovo studente!</a>
<table class = "table table-hover table-bordered table-striped">
    <thead>
        <tr>
            <th>Codice</th>
            <th>Nome</th>
            <th>Cognome</th>
            <th>Data di Nascita</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.Nome</td>
                <td>@item.Cognome</td>
                <td>@item.DataNascita</td>
               @*<td>@item.Descrizione</td>*@
                <td>
                <a class="btn btn-primary" asp-controller="Studenti" asp-action="Details" asp-route-id="@item.ID">Visualizza dettagli</a>
                <a class="btn btn-primary" asp-controller="Studenti" asp-action="Edit" asp-route-id="@item.ID">Modifica Email</a>
                <a class="btn btn-danger" asp-controller="Studenti" asp-action="Delete" asp-route-id="@item.ID">Elimina</a>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th>Totale</th>
            <th>@Model.Count</th>
            <th></th>
        </tr>
    </tfoot>
</table>