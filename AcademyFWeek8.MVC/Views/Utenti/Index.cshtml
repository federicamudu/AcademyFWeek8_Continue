@model ICollection<UtenteLoginViewModel>
<h1>Ecco la lista degli Utenti</h1>
<br />

<table class = "table table-hover table-bordered table-striped">
    <thead>
        <tr>
            <th>Username</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Username</td>

                <td>
                <a class="btn btn-primary" asp-controller="Utenti" asp-action="Details" asp-route-id="@item.Username">Visualizza dettagli</a>
                <a class="btn btn-primary" asp-controller="Utenti" asp-action="Edit" asp-route-id="@item.Username">Modifica Utente</a>
                <a class="btn btn-danger" asp-controller="Utenti" asp-action="Delete" asp-route-id="@item.Username">Elimina</a>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th>Totale</th>
            <th>@Model.Count</th>
            <th></th>
        </tr>
    </tfoot>
</table>
